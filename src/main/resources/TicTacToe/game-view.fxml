<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1150" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicTacToe.GameController">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER">
            <padding><Insets bottom="18" top="25" /></padding>
            <children>
                <Label styleClass="title-label" text="Tic Tac Toe AI" />
            </children>
        </HBox>
    </top>

    <!-- CENTER BOARD -->
    <center>
        <StackPane alignment="CENTER">
            <children>
                <GridPane id="board-grid" fx:id="boardGrid" hgap="20" vgap="20">
                    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                </GridPane>
            </children>
        </StackPane>
    </center>

    <!-- RIGHT SIDE (TWO CARDS) -->
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="330" spacing="25">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <!-- SETTINGS CARD -->
            <VBox spacing="16" styleClass="card">
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                <children>

                    <Label styleClass="card-title" text="Game Settings" />

                    <Label styleClass="section-label" text="Play as:" />
                    <HBox spacing="12">
                        <children>
                            <RadioButton text="X" fx:id="xRadio" />
                            <RadioButton fx:id="oRadio" text="O" />
                        </children>
                    </HBox>

                    <Label styleClass="section-label" text="Difficulty:" />
                    <ComboBox fx:id="difficultyCombo" prefWidth="200" />

                    <Label styleClass="section-label" text="Evaluation:" />
                    <ComboBox fx:id="evalCombo" prefWidth="200" />

                    <HBox spacing="10">
                        <children>
                            <Button fx:id="startButton" onAction="#onStartGame" text="Start Game" />
                            <Button fx:id="resetButton" onAction="#onResetClicked" text="Reset" />
                        </children>
                    </HBox>
                </children>
            </VBox>
            <!-- INFO CARD -->
            <VBox spacing="14" styleClass="card">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <children>

                    <Label styleClass="card-title" text="Game Info" />

                    <!-- Status Label -->
                    <Label fx:id="statusMiniLabel"
                           styleClass="info-label"
                           text="Ready."
                           wrapText="true"
                           maxWidth="Infinity"
                           maxHeight="Infinity" />

                    <Label styleClass="section-label" text="AI Move:" />

                    <!-- FIXED AI INFO LABEL -->
                    <Label fx:id="aiInfoLabel"
                           wrapText="true"
                           textAlignment="LEFT"
                           prefWidth="260"
                           maxWidth="Infinity"
                           maxHeight="Infinity"
                           styleClass="info-label" />

                    <Label styleClass="section-label" text="Score:" />

                    <Label fx:id="scoreLabel"
                           styleClass="score-label"
                           text="You 0 : 0 AI | Draws 0" />

                </children>
            </VBox>


        </VBox>
    </right>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <HBox id="bottom-bar" alignment="CENTER_LEFT">
            <padding><Insets bottom="12" left="25" top="12" /></padding>
            <children>
                <Label fx:id="statusLabel" styleClass="status-label" text="Welcome to Tic Tac Toe AI." />
            </children>
        </HBox>
    </bottom>

</BorderPane>
